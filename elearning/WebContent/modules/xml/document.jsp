          <span style='color:#7f0055; '>&lt;</span><span style='color:#7f0055; '>prenom</span><span style='color:#7f0055; '>></span>saliou<span style='color:#7f0055; '>&lt;/</span><span style='color:#7f0055; '>nom</span><span style='color:#7f0055; '>></span>   
     <span style='color:#7f0055; '>&lt;/</span><span style='color:#7f0055; '>personne</span><span style='color:#7f0055; '>></span>

    <span style='color:#7f0055; '>&lt;</span><span style='color:#7f0055; '>personne</span><span style='color:#7f0055; '>></span>
